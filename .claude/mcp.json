{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["@anthropic/mcp-server-context7"],
      "env": {}
    },

    "sequential-thinking": {
      "command": "npx",
      "args": ["@anthropic/mcp-server-sequential-thinking"],
      "env": {}
    },

    "filesystem": {
      "command": "npx",
      "args": ["@anthropic/mcp-server-filesystem"],
      "env": {
        // Absolute paths are safer for Codex & Kiro:
        "MCP_FS_ROOT": "${workspaceFolder}"
      }
    },

    "shell": {
      "command": "npx",
      "args": ["@anthropic/mcp-server-shell"],
      "env": {}
    }
  }
}

