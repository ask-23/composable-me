# =============================================================================
# Composable Me Hydra - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your API keys
# =============================================================================

# -----------------------------------------------------------------------------
# LLM API Keys (at least one required)
# -----------------------------------------------------------------------------

# OpenAI API key (for GPT models)
OPENAI_API_KEY=

# Anthropic API key (for Claude models)
ANTHROPIC_API_KEY=

# GLM API key
GLM_API_KEY=

# Chutes API key (for DeepSeek models)
CHUTES_API_KEY=

# Together API key (for Llama models)
TOGETHER_API_KEY=

# -----------------------------------------------------------------------------
# Optional Configuration
# -----------------------------------------------------------------------------

# GitHub token (for GitHub integrations)
GITHUB_TOKEN=

# -----------------------------------------------------------------------------
# OpenTelemetry (OTLP) Configuration
# -----------------------------------------------------------------------------

# Enable/disable OpenTelemetry telemetry (default: false)
OTEL_ENABLED=false

# Service name for traces (default: hydra-backend)
OTEL_SERVICE_NAME=hydra-backend

# Service version (default: 1.0.0)
OTEL_SERVICE_VERSION=1.0.0

# OTLP exporter endpoint (default: http://localhost:4317)
# For gRPC: http://localhost:4317
# For HTTP: http://localhost:4318
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Protocol to use: grpc or http (default: grpc)
OTEL_EXPORTER_OTLP_PROTOCOL=grpc

# Optional headers for OTLP exporter (comma-separated key=value pairs)
# Example: OTEL_EXPORTER_OTLP_HEADERS=api-key=your-key,custom-header=value
OTEL_EXPORTER_OTLP_HEADERS=

# Also export traces to console for debugging (default: false)
OTEL_CONSOLE_EXPORT=false

# Deployment environment (default: development)
ENVIRONMENT=development
