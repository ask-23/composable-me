---
import Layout from '../layouts/Layout.astro';
import UploadForm from '../components/UploadForm.svelte';
---

<Layout title="Upload">
  <div class="upload-page">
    <h1>Generate Application Materials</h1>
    <p class="subtitle">
      Upload your job description and resume, and Hydra's multi-agent system will
      create tailored application materials optimized for ATS and human reviewers.
    </p>
    <UploadForm client:load />

    <div class="features">
      <h2>What Hydra Does</h2>
      <div class="feature-grid">
        <div class="feature">
          <h3>Gap Analysis</h3>
          <p>Maps job requirements to your experience, identifying matches and gaps.</p>
        </div>
        <div class="feature">
          <h3>Interview Prep</h3>
          <p>Generates STAR+ questions for any skill gaps to prepare your narrative.</p>
        </div>
        <div class="feature">
          <h3>Differentiation</h3>
          <p>Identifies your unique value propositions that set you apart.</p>
        </div>
        <div class="feature">
          <h3>Tailoring</h3>
          <p>Creates customized resume and cover letter for the specific role.</p>
        </div>
        <div class="feature">
          <h3>ATS Optimization</h3>
          <p>Ensures your documents pass automated screening systems.</p>
        </div>
        <div class="feature">
          <h3>Audit & Verify</h3>
          <p>Validates all claims against your source documents for truth.</p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .upload-page {
    max-width: 800px;
    margin: 0 auto;
  }

  .subtitle {
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }

  .features {
    margin-top: 3rem;
  }

  .features h2 {
    text-align: center;
    margin-bottom: 2rem;
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
  }

  .feature {
    background: var(--color-bg-secondary);
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid var(--color-border);
  }

  .feature h3 {
    color: var(--color-primary);
    margin-bottom: 0.5rem;
    font-size: 1rem;
  }

  .feature p {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin: 0;
  }
</style>
